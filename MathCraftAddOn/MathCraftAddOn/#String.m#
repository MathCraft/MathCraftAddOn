(*****************************************************************************)
BeginPackage["MathCraftAddOn`String`"]
Needs["MathCraftAddOn`System`"]


mcLongestCommonSequence::usage

Begin["`Private`"]



(*****************************************************************************)
(* ::Section:: *)
(* LongestCommonSequence *)

mcLongestCommonSequence[s1_String, s2_String] := Last[SortBy[Cases[SequenceAlignment[s1, s2], _String], StringLength]];

mcLongestCommonSequence[l1_List, l2_List] := Last[SortBy[Cases[SequenceAlignment[s1, s2], _String], StringLength]];




End[]

EndPackage[]
